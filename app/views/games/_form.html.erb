<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row form-group">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name %>
    </div>
  </div>
  <p></p>

  <div class="row form-group">
    <%= form.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :description %>
    </div>
  </div>

  <div class="row form-group">
    <%= form.label :start_date, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.date_select :start_date %>
    </div>
  </div>

  <div class="row form-group">
    <%= form.label :end_date, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.date_select :end_date %>
    </div>
  </div>

  <%= form.fields_for :participants do |builder, index| %>
    <br>
    <p>
      <strong>Player <%=index%> <%=index%></strong>
    </p>

    <%= render 'players/player_form', :f => builder %>
  <% end %>
  <p></p>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
